---
import "../styles/main.css";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta
      name="theme-color"
      content="#fff8f5"
      media="(prefers-color-scheme: light)"
    />

    <!-- Favicon -->
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />

    <!-- HTML Meta Tags -->
    <title>Wonder Noty App</title>
    <meta name="description" content="The best way to take notes" />
    <link rel="canonical" href="https://noty.donmanuel.dev/" />

    <!-- Facebook Meta Tags -->
    <meta property="og:url" content="https://noty.donmanuel.dev" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content="Wonder Noty App" />
    <meta property="og:description" content="https://noty.donmanuel.dev" />
    <meta property="og:image" content="" />

    <!-- Twitter Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta property="twitter:domain" content="noty.donmanuel.dev" />
    <meta property="twitter:url" content="https://noty.donmanuel.dev" />
    <meta name="twitter:title" content="Thenics Pro" />
    <meta name="twitter:description" content="The best way to take notes" />
    <meta name="twitter:image" content="" />

    <!-- Tags found on other websites  -->
    <meta name="appstore:bundle_id" content="com.wondertech.notyapp" />
    <meta name="appstore:store_id" content="com.wondertech.notyapp" />
    <meta
      name="thumbnail"
      content="https://noty.donmanuel.dev/images/ios-icon.png"
    />

    <!-- Plus Jakarta Sans -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:ital,wght@0,200..800;1,200..800&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <div class="container">
      <div class="header">
        <img class="logo" alt="Wonder Noty App" src="images/ios-icon.png" />
        <div class="logotype-tagline-container">
          <h1 class="logotype">Wonder Noty App</h1>
          <h2 class="tagline" style="opacity: 0.5">
            The best way to take notes
          </h2>
        </div>
      </div>

      <div class="store-badge-container">
        <a
          class="store-badge store-badge-apple"
          href="https://apps.apple.com/us/app/wonder-noty-app/id6475991888"
          onclick="onClickAppStore()"
        >
          <picture>
            <img
              class="app-store-badge-on"
              alt="Download on the App Store badge"
              src="images/app-store-badge.svg"
            />
          </picture>
        </a>
      </div>

      <picture class="screenshot-parent">
        <img
          class="screenshot"
          alt="Wonder Noty App screenshot"
          src="images/screenshot-light.png"
        />
      </picture>

      <a
        href="https://privacy.donmanuel.dev/notyapp/noty_privacidad.html"
        target="_blank">ðŸ”’ Privacy</a
      >
      <br />
      <a href="https://twitter.com/manuelduarte077">Â© Manuel Duarte</a>
    </div>
  </body>
</html>
